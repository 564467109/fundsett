			<version>${spring.security.version}</version>
		</dependency>

		<dependency>
			<groupId>com.uusoft.tools.security</groupId>
			<artifactId>ttpack</artifactId>
			<version>1.0.0</version>
		</dependency>

		<dependency>
			<groupId>redis.clients</groupId>
